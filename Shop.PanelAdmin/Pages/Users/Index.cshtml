@page
@model IndexModel
@{
    ViewData["Title"] = "Users List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Users List</h3>

    <a class="btn btn-primary" asp-page="./Create">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var user in Model.Users)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>
                <a class="btn btn-dark" asp-page="./Details" asp-route-id="@user.Id">Details</a>
                <a class="btn btn-secondary" asp-page="./Update" asp-route-id="@user.Id">Update</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>